<Window x:Class="CMMT.UI.CreateDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create Database"
        Height="180" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Database Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="txtNewDatabase" Grid.Row="0" Grid.Column="1" MinWidth="200" Padding="4"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button x:Name ="btnCreate" Content="Create" Width="80" Margin="0,0,10,0" Click="CreateButton_Click"/>
            <Button Content="Clear" Width="80" Margin="0,0,10,0" Click="ClearButton_Click"/>
            <Button Content="Close" Width="80" Margin="0,0,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

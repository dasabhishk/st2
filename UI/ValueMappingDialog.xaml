<Window x:Class="CMMT.UI.ValueMappingDialog"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:vm="clr-namespace:CMMT.ViewModels"
        xmlns:local="clr-namespace:CMMT.Helpers"
       Title="Value Lookup Transformation"
       Height="500"
       Width="600"
       WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <local:IntInverseToVisibilityConverter x:Key="IntInverseToVisibilityConverter"/>
    </Window.Resources>
    
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        <!-- Title             <TextBlock Grid.Row="0" Text="Map CSV Institute Name values to standardized Database values."
                   FontWeight="Bold" FontSize="16" Margin="0,0,0,14"/> -->

            <!-- Default Target Value Row -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                <TextBlock Text="Select Target Value" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <ComboBox Width="210" Margin="10,0,0,0"
                      ItemsSource="{Binding AvailableTargets}"
                      SelectedItem="{Binding DefaultTargetValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="(used for unmapped/blank CSV rows)"
                       Margin="16,0,0,0" Foreground="Gray" VerticalAlignment="Center" FontStyle="Italic"/>
            </StackPanel>
            <!-- Mapping DataGrid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Mappings}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  RowBackground="White"
                  AlternatingRowBackground="#F9F9F9"
                  GridLinesVisibility="All"
                  Margin="0,0,0,8"
                  ColumnHeaderHeight="30"
                  RowHeight="30"
                  VerticalScrollBarVisibility="Auto"
                  BorderBrush="LightGray"
                  BorderThickness="1"
                  Visibility="{Binding Mappings.Count, Converter={StaticResource IntToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="CSV Value" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Width="160"
                                      ItemsSource="{Binding DataContext.AvailableSources, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding SourceValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding DataContext.HasCSVData, RelativeSource={RelativeSource AncestorType=Window}}"
                            IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Target DB Value" Width="210">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Width="190"
                                      ItemsSource="{Binding DataContext.AvailableTargets, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding TargetValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Action" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Width="90"
                                    Command="{Binding DataContext.RemoveRowCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" Margin="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Status message if no transformation via grid -->

        <TextBlock Grid.Row="2" Text="No custom transformation performed. All CSV values will use the default target value"
                       Foreground="Gray" FontStyle="Italic" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,30,0,0" Visibility="{Binding Mappings.Count, Converter={StaticResource IntInverseToVisibilityConverter}}" />    
            
            <!-- Add/Validation Row -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add Row" Width="100" Command="{Binding AddRowCommand}" Margin="0,0,16,0"/>
                <TextBlock Text="{Binding ValidationMessage}" Foreground="Red" VerticalAlignment="Center"/>
            </StackPanel>
            <!-- Footer Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0"
                    Grid.Row="3">
                <Button Content="Apply Transformation" Width="155" Margin="0,0,10,0" IsDefault="True" Click="Apply_Click"/>
                <Button Content="Cancel" Width="110" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Window>
 
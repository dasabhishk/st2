<Page x:Class="CMMT.UI.MappingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMMT.Helpers"
      xmlns:vm="clr-namespace:CMMT.ViewModels"
      mc:Ignorable="d" 
      Loaded="Page_Loaded" d:DesignHeight="600" d:DesignWidth="1000"
      Title="CSV Mapping">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanYesNoConverter x:Key="BooleanYesNoConverter"/>
        <local:BooleanValidInvalidConverter x:Key="BooleanValidInvalidConverter"/>
        <local:NullToInvisibleConverter x:Key="NullToInvisibleConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:BooleanConverter x:Key="BooleanConverter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#2E3B4E"/>
        </Style>

        <Style x:Key="MappingButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="ValidationWarningStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="StatusMessageTextStyle" TargetType="TextBlock">
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSchemaLoaded}" Value="False">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSchemaLoaded}" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallStatusEllipseStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,3,0"/>
        </Style>

        <Style x:Key="SmallStatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.RowSpan="4" 
                  Background="#80000000" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Loading..." Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="10" />
                </StackPanel>
            </Grid>

            <GroupBox Grid.Row="0" Header="CSV Type Selection" Margin="10,10,10,5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="500"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Select CSV Type:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding AvailableCsvTypes}"
                              SelectedItem="{Binding SelectedCsvType}"
                              IsEnabled="{Binding IsSchemaLoaded}"
                              Margin="0,0,20,0"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="{Binding CurrentMappingType.CsvType, StringFormat='CSV File for {0}'}" Margin="10,5,10,5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Text="{Binding CurrentMappingType.CsvFilePath}" 
                             IsReadOnly="True"
                             Margin="0,0,10,0"/>

                    <Button Grid.Column="1" 
                            Content="Browse" 
                            Command="{Binding BrowseCsvFileCommand}"
                            Width="80"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="2" 
                            Content="Auto-Match" 
                            Command="{Binding AutoMatchColumnsCommand}"
                            IsEnabled="{Binding CurrentMappingType.IsCsvLoaded}"
                            Width="120"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="3" 
                            Content="Reset" 
                            Command="{Binding ResetCurrentMappingCommand}"
                            IsEnabled="{Binding CurrentMappingType.IsCsvLoaded}"
                            Width="80"
                            Margin="0,0,10,0"/>
                </Grid>
            </GroupBox>

            <DataGrid Grid.Row="2" 
                      ItemsSource="{Binding ColumnMappings}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      HeadersVisibility="Column"
                      Margin="10,5,10,5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      RowHeight="40"
                      ColumnHeaderHeight="30"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      CanUserResizeColumns="True">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="BorderBrush" Value="#D0D0D0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="Padding" Value="4,2"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Database Column" 
                                        Binding="{Binding DbColumn.Name}" 
                                        IsReadOnly="True"
                                        Width="120"
                                        MinWidth="130"/>

                    <DataGridTextColumn Header="DB Data Type" 
                                        Binding="{Binding DbColumn.DataType}" 
                                        IsReadOnly="True"
                                        Width="90"
                                        MinWidth="100"/>

                    <DataGridTemplateColumn Header="CSV Column" Width="140" MinWidth="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding AvailableCsvColumns}"
                                          SelectedItem="{Binding SelectedCsvColumn, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding Path=DataContext.CurrentMappingType.IsCsvLoaded, RelativeSource={RelativeSource AncestorType=Page}}"
                                          Margin="2"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Transform" Width="180" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="2"
                                            VerticalAlignment="Center">
                                    <Button Content="Transform" 
                                            Command="{Binding OpenTransformationDialogCommand}"
                                            Width="100"
                                            Height="24"
                                            Margin="0,0,3,0"
                                            VerticalContentAlignment="Center"
                                            Visibility="{Binding CanBeTransformed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <Button Content="Clear" 
                                            Click="ClearTransformButton_Click"
                                            ToolTip="Clear transformation"
                                            Width="45"
                                            Height="24"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="{Binding HasTransformation}"
                                            Visibility="{Binding HasTransformation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Inferred Type (CSV)" 
                                        Binding="{Binding InferredType}" 
                                        IsReadOnly="True"
                                        Width="30"
                                        MinWidth="100"/>

                    <DataGridTemplateColumn Header="Original Values" Width="160" MinWidth="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                              MaxHeight="80"
                                              Margin="2">
                                    <ItemsControl ItemsSource="{Binding OriginalSampleValues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           Margin="0,0,0,1"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Transformed Values" Width="160" MinWidth="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                              MaxHeight="80"
                                              Margin="2">
                                    <ItemsControl ItemsSource="{Binding SampleValues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           Margin="0,0,0,1"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Validation" Width="*" MinWidth="280">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4,2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ValidationError}" 
                                               Foreground="Red"
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               ToolTip="{Binding ValidationError}"
                                               Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding ValidationWarning}" 
                                               Foreground="Orange"
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               ToolTip="{Binding ValidationWarning}"
                                               Visibility="{Binding ValidationWarning, Converter={StaticResource StringToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToBackgroundConverter}}"/>
                        <Setter Property="MinHeight" Value="35"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <Grid Grid.Row="3" Margin="10,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Style="{StaticResource StatusMessageTextStyle}"
                           Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <Ellipse>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse" BasedOn="{StaticResource SmallStatusEllipseStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MappingTypes[0].IsValid}" Value="True">
                                            <Setter Property="Fill" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MappingTypes[0].IsValid}" Value="False">
                                            <Setter Property="Fill" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MappingTypes[0]}" Value="{x:Null}">
                                            <Setter Property="Fill" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="Patient Study" Style="{StaticResource SmallStatusTextStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <Ellipse>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse" BasedOn="{StaticResource SmallStatusEllipseStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MappingTypes[1].IsValid}" Value="True">
                                            <Setter Property="Fill" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MappingTypes[1].IsValid}" Value="False">
                                            <Setter Property="Fill" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MappingTypes[1]}" Value="{x:Null}">
                                            <Setter Property="Fill" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="Series Instance" Style="{StaticResource SmallStatusTextStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Legend: " Style="{StaticResource SmallStatusTextStyle}" FontWeight="SemiBold" Margin="10,0,0,0"/>
                        <Ellipse>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse" BasedOn="{StaticResource SmallStatusEllipseStyle}">
                                    <Setter Property="Fill" Value="Green"/>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="Valid" Style="{StaticResource SmallStatusTextStyle}" Margin="0,0,5,0"/>
                        <Ellipse Fill="Red" Style="{StaticResource SmallStatusEllipseStyle}"/>
                        <TextBlock Text="Invalid" Style="{StaticResource SmallStatusTextStyle}" Margin="0,0,5,0"/>
                        <Ellipse Fill="Gray" Style="{StaticResource SmallStatusEllipseStyle}"/>
                        <TextBlock Text="Not Started" Style="{StaticResource SmallStatusTextStyle}"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="Save Mapping" 
                        Command="{Binding SaveMappingsCommand}"
                        IsEnabled="{Binding CanSaveAllMappings}"
                        Width="120"
                        Height="30"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
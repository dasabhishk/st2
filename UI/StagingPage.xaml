<Page x:Class="CMMT.UI.StagingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMMT.UI"
      mc:Ignorable="d"
      Title="Staging Database">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="112*"/>
            <RowDefinition Height="169*"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <Grid Margin="40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Database Connection GroupBox -->
                <GroupBox Grid.Row="0">
                    <GroupBox.Header>
                        <TextBlock Text="Database Connection" FontWeight="Bold" FontSize="14"/>
                    </GroupBox.Header>
                    <Border Padding="30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="*" MinWidth="350"/>
                            </Grid.ColumnDefinitions>

                            <!-- Server Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                                <Run Text="Server Name"/>
                                <Run Text=" *" Foreground="Red"/>
                            </TextBlock>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtServerPrefix" Grid.Column="0" Padding="4" TextChanged="Server_TextChanged" Margin="0,5,0,5"/>
                                <TextBlock Text="\" Grid.Column="1" VerticalAlignment="Center" Margin="5,0"/>
                                <TextBox x:Name="txtServerName" Grid.Column="1" Padding="5" Margin="15,5,-10,5" TextChanged="Server_TextChanged" Grid.ColumnSpan="2"/>
                            </Grid>

                            <!-- Auth Type -->
                            <TextBlock Text="Authentication type" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <ComboBox x:Name="cmbAuthType" Grid.Row="2" Grid.Column="1" Padding="6" MinWidth="350" SelectionChanged="AuthTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Windows Authentication" IsSelected="True"  />
                                <ComboBoxItem Content="SQL Server Authentication"/>
                            </ComboBox>


                            <!-- Username -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,15,0">
                                <Run Text="User name"/>
                                <TextBlock x:Name="asteriskUsername" Text=" *" Foreground="Red" Visibility="Collapsed"/>
                            </TextBlock>
                            <TextBox x:Name="txtUsername" Grid.Row="4" Grid.Column="1" IsEnabled="False" Padding="5" Background="LightGray" MinWidth="350" Margin="0,5,0,5"/>

                            <!-- Password -->
                            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,6,15,0" Grid.RowSpan="2">
                                <Run Text="Password"/>
                                <TextBlock x:Name="asteriskPassword" Text=" *" Foreground="Red" Visibility="Collapsed"/>
                            </TextBlock>
                            <PasswordBox x:Name="txtPassword" Grid.Row="6" Grid.Column="1" IsEnabled="False" Padding="6" Background="LightGray" MinWidth="350" Margin="0,0,0,10" Grid.RowSpan="2"/>

                            <!-- Buttons -->
                            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                                <Button x:Name="btnTestConnection"
                                        Content="Test Connection"
                                        Width="140"
                                        Padding="6"
                                        Background="#0078D4"
                                        Foreground="White"
                                        BorderBrush="#0078D4"
                                        FontWeight="Bold"
                                        Margin="0,0,10,0"
                                        Click="TestConnectionButton_Click" Height="31"/>
                                <Button Content="Clear" Width="140" Padding="6" Click="ClearConnectionFields_Click" Height="31"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </GroupBox>

                <!-- Database Details GroupBox -->
                <GroupBox Grid.Row="2">
                    <GroupBox.Header>
                        <TextBlock Text="Database Details" FontWeight="Bold" FontSize="14"/>
                    </GroupBox.Header>
                    <Border Padding="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="*" MinWidth="350"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Staging Database List" x:Name="lblDatabaseList" Grid.Column="0" Margin="0,7,15,0" VerticalAlignment="Top"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <ComboBox x:Name="cmbDatabaseName"
                                          IsEnabled="False"
                                          MinWidth="250"
                                          Padding="6"
                                          Margin="0,0,10,0" Height="31" Width="225"/>
                                <Button x:Name="btnCreateDatabase"
                                        Content="Create Staging DB"
                                        Width="140"
                                        Padding="6"
                                        Click="CreateDatabaseButton_Click"
                                        Height="31"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </GroupBox>

                <!-- Save Button centered below everything -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnSaveConfig"
                            Content="Save"
                            Width="140"
                            Padding="6"
                            Click="SaveButton_Click"
                            Height="31"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
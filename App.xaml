<Application x:Class="CMMT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CMMT"
             xmlns:helpers="clr-namespace:CMMT.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Application styles can be modularized here if needed -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <!-- System Converter -->
            <BooleanToVisibilityConverter x:Key="SystemBooleanToVisibilityConverter"/>
            
            <!-- Custom Converters -->
            <helpers:BooleanYesNoConverter x:Key="BooleanYesNoConverter"/>
            <helpers:BooleanValidInvalidConverter x:Key="BooleanValidInvalidConverter"/>
            <helpers:NullToInvisibleConverter x:Key="NullToInvisibleConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <helpers:BooleanConverter x:Key="BooleanConverter"/>
            <helpers:BooleanToVisibilityConverter x:Key="CustomBooleanToVisibilityConverter"/>
            <helpers:ValidationStatusToBackgroundConverter x:Key="ValidationStatusToBackgroundConverter"/>

            <!-- Global Styles -->

            <!-- Nav Button -->
            <Style x:Key="NavButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter Margin="10,5"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#3E4B5E"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Global Button Style -->
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="MinWidth" Value="80" />
            </Style>

            <!-- Header TextBlock Style -->
            <Style TargetType="TextBlock" x:Key="HeaderStyle">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,10,0,5" />
            </Style>

            <!-- DataGrid Style -->
            <Style TargetType="DataGrid">
                <Setter Property="AutoGenerateColumns" Value="False" />
                <Setter Property="CanUserAddRows" Value="False" />
                <Setter Property="CanUserDeleteRows" Value="False" />
                <Setter Property="IsReadOnly" Value="False" />
                <Setter Property="Margin" Value="0,5" />
                <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            </Style>

            <!-- GroupBox Style -->
            <Style TargetType="GroupBox">
                <Setter Property="BorderBrush" Value="#CCCCCC" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="8" />
                <Setter Property="Margin" Value="0,5" />
            </Style>

            <!-- Global TextBox Style -->
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <!-- Global TextBlock Style -->
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Global ProgressBar Style -->
            <Style TargetType="ProgressBar">
                <Setter Property="Height" Value="20"/>
                <Setter Property="Width" Value="500"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <!-- Global StackPanel Style -->
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
<Window x:Class="CMMT.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMMT"
        mc:Ignorable="d"
        Title="Clinical Metadata Migration Tool"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Top Header -->
        <Border DockPanel.Dock="Top" Height="60" Background="#201c2c" Panel.ZIndex="1">
            <Grid VerticalAlignment="Center" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Source="pack://application:,,,/UI/Assets/logo.png"
                       Height="40" Width="100"
                       Grid.Column="1" />
            </Grid>
        </Border>

        <!-- Left Navigation Panel with Footer -->
        <DockPanel DockPanel.Dock="Left" Width="180" Background="#2E3B4E" Panel.ZIndex="2">
            <!-- Footer version pinned at bottom -->
            <TextBlock 
                Text="Version: 1.0.0.0"
                Foreground="LightGray"
                FontSize="12"
                TextDecorations="Underline"
                HorizontalAlignment="Left"
                Margin="10"
                DockPanel.Dock="Bottom" />

            <!-- Navigation Buttons -->
            <StackPanel Margin="10,10,10,0">
                <Button Content="Target DB" Click="NavButton_Click" Tag="TargetDB" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
                <Button Content="Mapping" Click="NavButton_Click" Tag="Mapping" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
                <Button Content="Staging DB" Click="NavButton_Click" Tag="StagingPage" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
                <Button Content="Process CSV" Click="NavButton_Click" Tag="ProcessCSV" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
                <Button Content="Migration" Click="NavButton_Click" Tag="Migration" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
                <Button Content="Report" Click="NavButton_Click" Tag="Report" Style="{StaticResource NavButtonStyle}" Margin="0,0,0,5"/>
            </StackPanel>
        </DockPanel>

        <!-- Page Content -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>